<div class="container mt-100">
  <div class="row">
    <div class="col-md-12">
      <div class="card mb-4">
        <div class="card-header">
          <div class="media flex-wrap w-100 align-items-center"> 
            <div class="media-body ml-3"> <a class="text-muted" href="javascript:void(0)" data-abc="true">{{User.username}}</a>
              <div class="text-muted small">posted {{timeFrom time_posted}} ago</div>
            </div>
          </div>
          
        </div>
        <div class="card-body text-dark">
          <p> {{title}} </p>
        </div>
        <div class="card-footer d-flex flex-wrap justify-content-between align-items-center px-0 pt-0 pb-3">
          <div class="px-4 pt-3"> 
          </div>
          
          <div class="px-4 pt-3"> 
            {{#if renderUpdateButton}}
            <button type="button" class="btn btn-primary updateButton" data-postNum="{{id}}"><i class="ion ion-md-create"></i>Update</button>
            {{/if}}
            <a href="/post/{{id}}" class="btn btn-primary">Reply</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>